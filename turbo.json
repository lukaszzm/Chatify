{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "TZ",
    "PORT",
    "DATABASE_URL",
    "JWT_SECRET",
    "JWT_EXPIRATION_TIME",
    "JWT_REFRESH_SECRET",
    "JWT_REFRESH_EXPIRATION_TIME",
    "REDIS_URL",
    "AWS_ACCESS_KEY",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_S3_REGION",
    "AWS_S3_BUCKET_NAME",
    "VITE_GRAPHQL_URL",
    "VITE_GRAPHQL_WS_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": [],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
